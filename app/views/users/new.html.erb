<h1> Welcome to Re-former </h1>

<%= form_with(model:@user, local:true) do |f| %>
  <ul>
    <% @user.errors.full_messages.each do |error|%>
      <li> <%=error%> </li>
    <%end%>
  </ul>
  
  <p>
  <%= f.label :username%> <br>
  <%= f.text_field :username%>
  </p>

  <p>
  <%= f.label :email%> <br>
  <%= f.text_field :email%>
  </p>

  <p>
  <%= f.label :password,'Password entry'%> <br>
  <%= f.text_field :password%>
  </p>

  <p>
  <%= f.submit%>
  </p>

<%end%>
